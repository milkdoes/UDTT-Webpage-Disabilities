<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:id="@+id/RL_Main">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_help"
        android:id="@+id/textView_FindMySenpai"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="34sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_FindMySenpai"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeLayout">

    </RelativeLayout>

    <Button
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/button_enter"
        android:id="@+id/button_Find"
        android:textSize="50sp"
        android:onClick="onClick_Proffesors"
        android:width="15dp"
        android:background="@color/highlighted_text_material_light"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/label_about"
        android:id="@+id/textView_About"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="34sp"
        android:clickable="false"
        android:onClick="onClick_About"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo"
        android:layout_below="@+id/button_Find"
        android:layout_above="@+id/textView_About" />


</RelativeLayout>
